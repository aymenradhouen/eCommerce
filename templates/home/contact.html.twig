{% extends 'base.html.twig' %}

{% block Title %}Contact{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/Contact-Form-Clean.css') }}" />
{% endblock %}

{% block route %}
    Contact Us
{% endblock %}

{% block body %}

    <!--================Contact Area =================-->
    <section class="contact_area section_gap_bottom">
        <div class="container">
            <div id="mapBox" class="mapBox" data-lat="36.8322038" data-lon="10.2165025" data-zoom="13" data-info="UniversitÃ© Centrale (Ecole IT)."
                 data-mlat="36.8322038" data-mlon="10.2165025">
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="contact_info">
                        <div class="info_item">
                            <i class="lnr lnr-home"></i>
                            <h6>Tunis, Tunisia</h6>
                            <p>Carthage</p>
                        </div>
                        <div class="info_item">
                            <i class="lnr lnr-phone-handset"></i>
                            <h6>25000001</h6>
                            <p>Lundi->Vendredi</p>
                        </div>
                        <div class="info_item">
                            <i class="lnr lnr-envelope"></i>
                            <h6>aymennradhouenn@gmail.com</h6>
                            <p>Send us your query anytime!</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    {{ form_start(form,{'attr' : {'class' : 'row contact_form'}}) }}
                    <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.name,{'label' : false, 'attr' : {'placeholder' : 'Enter your name','class' : 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.email,{'label' : false, 'attr' : {'placeholder' : 'Enter email address','class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.message,{'label' : false, 'attr' : {'placeholder' : 'Enter Message','class' : 'form-control','rows' : '1'}}) }}
                            </div>
                        </div>
                        <div class="col-md-12 text-right">
                            <button type="submit" value="submit" class="primary-btn">Send Message</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </section>

{% endblock %}