{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block route %}
    Reset Password
{% endblock %}

{% block body %}
    {% for message in app.session.flashbag.get('emailSuccess') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('emailFail') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Reset Password</h5>
                        <form class="form-signin" method="post" action="{{ path('reset') }}">
                            <div class="form-label-group">
                                <input type="email" id="inputEmail" class="form-control" name="emailReset" placeholder="Email address" required autofocus>
                                <label for="inputEmail">Email address</label>
                            </div>

                            <button style="display: block;
    border-radius: 0px;
    line-height: 38px;
    width: 100%;
    text-transform: uppercase;
    border: none;" type="submit" type="submit" value="submit" class="primary-btn">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

